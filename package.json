{
  "name": "node-js-library-template",
  "version": "1.0.0",
  "type": "module",
  "description": "Template for production ready node js library",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timelessco/node-js-library-template.git"
  },
  "homepage": "https://github.com/timelessco/node-js-library-template#readme",
  "bugs": {
    "url": "https://github.com/timelessco/node-js-library-template/issues"
  },
  "author": "Timeless <hello@timeless.co> (https://timeless.co/)",
  "license": "MIT",
  "private": true,
  "main": "./lib/node-js-library-template.cjs",
  "module": "./lib/node-js-library-template.js",
  "exports": {
    ".": {
      "import": "./lib/node-js-library-template.js",
      "require": "./lib/node-js-library-template.cjs"
    }
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "js",
    "library",
    "production",
    "template",
    "node"
  ],
  "scripts": {
    "build": "tsup",
    "check": "pnpm lint:check && pnpm format:check",
    "commit": "gacp",
    "dev": "NODE_OPTIONS=\"--experimental-specifier-resolution=node\" nodemon demo/main.js",
    "fix": "pnpm lint:fix && pnpm format:fix",
    "format:check": "prettier -l --cache \"./**/*.{html,css,js,cjs,jsx,ts,cts,tsx,md,json}\"",
    "format:fix": "prettier --write --cache --check \"./**/*.{html,css,js,cjs,jsx,ts,cts,tsx,md,json}\"",
    "lint:check": "eslint --cache --color --ext .js,.cjs,.jsx,.ts,.cts,.tsx .",
    "lint:fix": "eslint --cache --color --ext .js,.cjs,.jsx,.ts,.cts,.tsx . --fix",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "release": "release-it",
    "release:check": "release-it --dry-run",
    "test": "echo \"no test specified\" && exit 0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@ianvs/prettier-plugin-sort-imports": "^3.7.1",
    "@release-it/conventional-changelog": "^5.1.1",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "gacp": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.0",
    "nodemon": "^2.0.20",
    "pinst": "^3.0.0",
    "prettier": "^2.8.3",
    "prettier-plugin-pkg": "^0.17.1",
    "release-it": "^15.6.0",
    "rimraf": "^4.0.7",
    "tsup": "^6.5.0"
  },
  "sideEffects": false,
  "browserslist": {
    "production": [
      ">0.2%",
      "last 2 versions",
      "Firefox ESR",
      "not dead"
    ],
    "development": [
      "last 2 versions",
      "not dead"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "gacp": {
    "add": false,
    "push": false,
    "emoji": "emoji",
    "editor": false
  },
  "lint-staged": {
    "**/*.{js,cjs,jsx,ts,cts,tsx}": [
      "pnpm lint:fix"
    ],
    "**/*.{html,css,js,cjs,jsx,ts,cts,tsx,md,json}": [
      "pnpm format:fix"
    ]
  },
  "source": "./src/index.js"
}
